
  <button type="submit">Salvar chef</button>
  
  <div class="item">
    <div>Avatar</div>
    <div>
      <input 
        type="url" 
        name="avatar_url" 
        placeholder="http://"
        value="{{ chef.avatar_url }}"
      >
    </div>
  </div>

  <div class="item">
    <div>Nome</div>
    <div>
      <input 
        type="text" 
        name="name" 
        placeholder="Nome do chef"
        value="{{ chef.name }}"
      >
    </div>
  </div>

  