{% extends "layout.njk" %}

{% block content %}

{% block head %}
    <title>Receitas</title>
    <link rel="stylesheet" href="/css/styles.css">
{% endblock %}

  <section class="cards">
    {% for item in items %}
    <div class="card" id="{{item.id}}">
      <div class="card__image">
        <img src="{{item.image}}" alt="Foto burger">
      </div>
      <div class="card-title">
        <p>{{item.title}}</p>
      </div>
      <div class="card-author">
        <p>{{item.author}}</p>
      </div>
    </div>
  {% endfor %}
  </section>
{% endblock %}