  <div class="item">
    <div>Imagem</div>
    <div>
      <input 
        type="url" 
        name="image" 
        placeholder="http://"
        value="{{ recipe.image }}"
      >
    </div>
  </div>

  <div class="item">
    <div>Receita</div>
    <div>
      <input 
        type="text" 
        name="title" 
        placeholder="Nome da receita"
        value="{{ recipe.title }}"
      >
    </div>
  </div>


  <div class="item">
    <div>Autor</div>
    <div>
      <input 
        type="text" 
        name="author" 
        placeholder="Nome do Autor"
        value="{{ recipe.author }}"
      >
    </div>
  </div>


  <div class="item">
    <div>Ingredientes</div>
    <div>
      <input 
        type="text" 
        name="ingredients" 
        placeholder="Ingredientes"
        value="{{ recipe.ingredients }}"
      >
    </div>
  </div>

  <div class="item">
    <div>Preparação</div>
    <div>
      <input 
        type="text" 
        name="preparations" 
        placeholder="Modo de preparo"
        value="{{ recipe.preparations }}"
      >
    </div>
  </div>


  <div class="item">
    <div>Informação</div>
    <div>
      <input 
        type="text" 
        name="informations" 
        placeholder="Informações adicionais"
        value="{{ recipe.informations }}"
      >
    </div>
  </div>

  <button type="submit">Salvar</button>