<div class="form">
  <div class="item">
    <div>Imagem</div>
    <div>
      <input 
        type="url" 
        name="image" 
        placeholder="http://"
        value="{{ recipe.image }}"
      >
    </div>
  </div>

  <div class="item">
    <div>Receita</div>
    <div>
      <input 
        type="text" 
        name="title" 
        placeholder="Nome da receita"
        value="{{ recipe.title }}"
      >
    </div>
  </div>


  <div class="item">
    <div>Autor</div>
    <div>
      <input 
        type="text" 
        name="author" 
        placeholder="Nome do Autor"
        value="{{ recipe.author }}"
      >
    </div>
  </div>


  <div class="item">
    <div>Ingredientes</div>
    {%if recipe%}
    {% for ingredient in recipe.ingredients %}
    <div class="ingredient">
      <input 
        type="text" 
        name="ingredients" 
        placeholder="Ingredientes"
        value="{{ recipe.ingredients }}"
      >
    </div>
    {% endfor %}

    {% else %}
    <div class="ingredient">
      <input
        type="text"
        name="ingredients[]"
        value="{{recipe.ingredients}}"
      >
    </div>
    {%endif%}
  </div>

  <div class="item">
    <div>Preparação</div>
    <div id="preparations">

        {% if recipe %}

        {% for preparation in recipe.preparations %}
        <div class="preparation">
          <input
            type="text"
            name="preparations[]"
            value="{{recipe.preparation}}"
          >
        </div>
        {%endfor%}
      {%else%}

      <div class="preparation">
          <input
            type="text"
            name="preparations[]"
          >
        </div>
      {%endif%}
    </div>
    <button type="button" class="add-preparation">Adicionar novo passo</button>
  </div>


  <div class="item">
    <div>Informação</div>
    <div>
      <input 
        type="text" 
        name="informations" 
        placeholder="Informações adicionais"
        value="{{ recipe.informations }}"
      >
    </div>
  </div>
</section>
  <button type="submit">Salvar</button>