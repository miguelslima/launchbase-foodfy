{% extends "admin/layout.njk" %}

{% block content %}
  <section id="admin">
    <div class="form-recipe">
      <h1>Gerenciar Receitas</h1>
      <span>
        <a href="recipes/create" class="addRecipe">Adicionar receita</a>
      </span>
    </div>

  <section class="cards">
    {% for recipe in recipes %}
    <div class="card" id="{{loop.index -1}}">
      <div class="card__image">
        <img src="{{recipe.image}}">
      </div>
      <div class="card-title">
        <p>{{recipe.title}}</p>
      </div>
      <div class="card-author">
        <p>{{recipe.author}}</p>
      </div>
    </div>
    {% endfor %}
  </section>

  
{%endblock%}
  
