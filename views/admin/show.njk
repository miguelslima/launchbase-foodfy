{% extends "admin/layout.njk" %}

{% block head %}
<title>Receita - {{recipe.title}}</title>
<link rel="stylesheet" href="/css/receipt.css">
{% endblock %}

{% block content %}

<div class="wrapper">
  <h1>{{recipe.title}}</h1>       
  <span>
    <a href="{{ recipe.id }}/edit" class="addRecipe">Editar receita</a>
  </span>
  <div class="receipt">
    <div class="receipt-header">
      <img src="{{recipe.image}}" alt="{{recipe.title}}" />
      <div class="head-group">
        <h2>{{recipe.title}}</h2>
        <p>por {{recipe.author}}</p>
      </div>
    </div>

    <div class="receipt-content">
      <div id="ingredients" class="topic">
        <div class="sub-head">
          <h3>Ingredientes</h3>
          <button class="toggleContent">ESCONDER</button>
        </div>

        <div class="topic-content">
          <ul>
            {% for ingredient in recipe.ingredients %}
              <li>{{ingredient}}</li>
            {% endfor %}
          </ul>
        </div>
      </div>

      <div id="preparation" class="topic">
        <div class="sub-head">
          <h3>Modo de preparo</h3>
          <button class="toggleContent">ESCONDER</button>
        </div>

        <div class="topic-content">
          <ul>
            {% for preparation in recipe.preparations %}
              <li>{{preparation}}</li>
            {% endfor %}
          </ul>
        </div>
      </div>

      <div id="information" class="topic">
        <div class="sub-head">
          <h3>Informações adicionais</h3>
          <button class="toggleContent">ESCONDER</button>
        </div>

        <div class="topic-content">
          <p>{{recipe.informations}}</p>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}