{% extends "layout.njk" %}

{% block head %}
<title>Receita - {{item.title}}</title>
<link rel="stylesheet" href="/css/receipt.css">
{% endblock %}

{% block content %}
        
<div class="wrapper">
  <div class="receipt">
    <div class="receipt-header">
      <img src="{{item.image}}" alt="{{item.title}}" />
      <div class="head-group">
        <h1>{{item.title}}</h1>
        <p>por {{item.author}}</p>
      </div>
    </div>

    <div class="receipt-content">
      <div id="ingredients" class="topic">
        <div class="sub-head">
          <h3>Ingredientes</h3>
          <button class="toggleContent">ESCONDER</button>
        </div>

        <div class="topic-content">
          <ul>
            {% for ingredient in item.ingredients %}
              <li>{{ingredient}}</li>
            {% endfor %}
          </ul>
        </div>
      </div>

      <div id="preparation" class="topic">
        <div class="sub-head">
          <h3>Modo de preparo</h3>
          <button class="toggleContent">ESCONDER</button>
        </div>

        <div class="topic-content">
          <ul>
            {% for preparation in item.preparation %}
              <li>{{preparation}}</li>
            {% endfor %}
          </ul>
        </div>
      </div>

      <div id="information" class="topic">
        <div class="sub-head">
          <h3>Informações adicionais</h3>
          <button class="toggleContent">ESCONDER</button>
        </div>

        <div class="topic-content">
          <p>{{item.information}}</p>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}